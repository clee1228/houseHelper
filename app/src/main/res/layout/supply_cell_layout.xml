<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/supply_cell_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@layout/border"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/row1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- User name text view -->
        <TextView
            android:id="@+id/supply_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="supply name"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:textSize="24dp"
            android:layout_marginStart="27dp"
            android:layout_marginTop="8dp"
            android:typeface="sans" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/row2"
        android:layout_width="fill_parent"
        android:layout_height="95dp"
        android:orientation="vertical">

        <!-- "Tasks" text view -->
        <TextView
            android:id="@+id/urgency_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="27dp"
            android:text="Urgency: High"
            android:textColor="@color/colorPrimary"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/supply_price_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="27dp"
            android:text="Price: $7.50"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="5dp"
            android:textSize="16dp"/>

        <CheckBox
            android:id="@+id/supply_check_box"
            android:layout_width="113dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="23dp"
            android:layout_marginTop="5dp"
            android:buttonTint="#DAA520"
            android:text="Purchased"
            android:textColor="@color/colorPrimary" />

    </LinearLayout>


</LinearLayout>